<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="{{ asset("css/main.css") }}">
        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset("css/fontello.css") }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <span class="nav-link parent-item">Kitchen</span>
                </li>
                <li class="nav-item">
                    <a class="nav-link child-item" href="{{ path("meal_index") }}">Meals</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link child-item" href="{{ path("category_index") }}">Categories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link child-item" href="{{ path("option_index") }}">Meals Options</a>
                </li>
                <li class="nav-item">
                    <span class="nav-link parent-item">Restaurants</span>
                </li>
                <li class="nav-item">
                    <a class="nav-link child-item" href="{{ path("restaurant_index") }}">Locations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link child-item" href="{{ path("fos_user_security_logout") }}">Logout</a>
                </li>

            </ul>
        </div>
        <div id="content-wrapper">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        <strong>{{ message }}</strong>
                    </div>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
        </div>
    </div>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
        <script src="{{ asset("js/main.js") }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
