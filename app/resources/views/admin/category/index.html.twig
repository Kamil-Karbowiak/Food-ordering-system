{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <a href="{{ path("category_new") }}">Add new Category...</a>
        <h1>Category list</h1>

        <table class="table">
            <tr>
                <th>Name</th>
                <th colspan="2">Actions</th>
            </tr>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td><a href="{{ path("category_edit",{ 'id' : category.id }) }}">Edit</a></td>
                    <td>
                        <form action="{{ path('category_delete', {'id': category.id}) }}" method="post">
                            {{ form_widget(delete_forms[category.id]) }}
                            <button type="submit" style="font-family:fontello;">&#xe801;</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}